{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["esnext"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "rootDir": "src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src"]
}
